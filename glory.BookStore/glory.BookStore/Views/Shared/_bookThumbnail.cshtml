@model BookModel

<div class="card  text-center">
    <div class="card-body">
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/books/indir.png":Model.CoverImageUrl)" class="img-thumbnail" />
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "başlık bulunamadı": Model.Title)</h5>
        <h6 class="card-subtitle mb-2 text-muted">@(string.IsNullOrEmpty(Model.Author) ? "yazar bulunamadı": Model.Author)<</h6>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "açıklama bulunamadı": Model.Author)</p>
        <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" asp-route-nameOfBook="@Model.Title" class="card-link bg-light">View Details</a>
    </div>
</div>