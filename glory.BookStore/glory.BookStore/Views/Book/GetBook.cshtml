@model BookModel
@{
    //ViewData["Title"] = "Book Detail " + Model.book.Title;
    ViewData["Title"] = "Book Detail " + Model.Title;
}


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               @*<embed src="@Model.BookPdfUrl" class="w-100" />*@
                <iframe src="@Model.BookPdfUrl" class="w-100"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">kapat</button>
            </div>
        </div>
    </div>
</div>


<div class="container mt-4">
    <h3 class="display-4">Book Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" :"")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active" :"carousel-item")">
                            <img src="@Model.Gallery[i].URL" class="d-block w-100" alt="@Model.Gallery[i].Name" />
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3>@Model.Title</h3>
                    <p class="btn btn-dark">@Model.Category</p>
                    <p class="btn btn-success">@Model.Language</p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Author</h5>
                    <p class="card-text">@Model.Description</p>

                </div>
                <div class="card-footer text-muted">
                    <p class="btn btn-primary">@Model.TotalPages sayfa</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-danger" href="@Model.BookPdfUrl" target="_blank" data-toggle="modal" data-target="#exampleModal">
                        oku
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


