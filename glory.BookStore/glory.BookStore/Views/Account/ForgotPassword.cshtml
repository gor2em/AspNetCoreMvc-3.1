@model glory.BookStore.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}


<hr />
<div class="container">
    <h1>Forgot Password</h1>
    <div class="row">
        <div class="col-md-12">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-info">
                    <p>eğer bize önceden katıldıysan, kayıtlı mail adresine mesaj gönderildi!</p>
                </div>
            }
            else
            {
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                    </div>
                </form>
            }

        </div>
    </div>
    <div>
        <a asp-action="login" asp-controller="account">Login</a>
    </div>

</div>

